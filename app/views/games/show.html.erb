<div class="columns is-mobile">
  <div class="column is-narrow">
    <%= link_to '< Back', root_path, class: "button mt-4 ml-4" %>
  </div>
  <div class='column'></div>
  <% if @isPublisher %>
    <div class="column is-narrow">
      <%= link_to 'Edit', edit_game_path(params[:id]), class: "button mt-4 mr-4 is-link" %>
    </div>
  <% end %>
</div>
<div class='box'>
  <div class='columns'>
    <div class='column is-narrow'>
      <% img_link = "https://picsum.photos/500/500?random=#{@game.id}" %>
      <img src=<%=img_link%> alt='Image'>
    </div>
    <div class='column'>
      <h2 class='title'><%= @game.title %></h2>
      <p class='content'><%= @game.description %></p>
      <%= link_to 'Download', download_path(@game.url), class: "button" %>
    </div>
  </div>
</div>
