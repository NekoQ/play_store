<div class='columns is-mobile is-multiline is-gapless'>
  <div class='column'>
    <h1 class="title is-1 mt-4">Play Store</h1>
  </div>
  <div class='column is-narrow mr-4'>
    <% if current_user %>
      <%= link_to 'Sign out', destroy_user_session_path, method: "delete", class: 'button mt-4 is-info' %><br>
      <%= link_to "Make #{@switch_role}", '/switch_role', class: "button mt-4 is-warning" %>
    <% else %>
      <%= link_to 'Sign in', new_user_session_path, class: 'button mt-4 is-info' %>
    <% end %>
  </div>
</div>
<div class='columns is-mobile is-gapless is-multiline'>
  <div class='column is-narrow'>
    <h2 class="subtitle is-2 ml-4">Apps</h2>
  </div>
  <% if @isPublisher %>
    <div class='column ml-4'>
      <%= link_to 'New', new_app_path, class: "button mt-2 is-primary" %>
    </div>
  <% end %>
</div>
<div class='columns is-gapless is-multiline is-mobile is-justify-content-center'>
  <% @apps.each do |app| %>
    <%= render partial: 'app', locals: { app: app, img: rand(100) } %>
  <% end %>
</div>
<hr>
<div class='columns is-mobile is-gapless is-multiline'>
  <div class='column is-narrow'>
    <h2 class="subtitle is-2 ml-4">Games</h2>
  </div>
  <% if @isPublisher %>
    <div class='column ml-4'>
      <%= link_to 'New', new_game_path, class: "button mt-2 is-primary" %>
    </div>
  <% end %>
</div>
<div class='columns is-gapless is-multiline is-mobile is-justify-content-center'>
  <% @games.each do |game| %>
    <%= render partial: 'game', locals: { game: game, img: rand(100) } %>
  <% end %>
</div>
