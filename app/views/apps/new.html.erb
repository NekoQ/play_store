<p> <%= link_to '< Back', root_path, class: "button mt-4 ml-4" %> </p>
<div class='box'>
  <h1 class='title is-4'>Create app</h1>
  <%= form_with url: "/apps", method: :post do |form| %>
    <div class="field">
      <label class="label">Title</label>
      <div class='control'>
        <%= form.text_field :title, class: "input"  %>
      </div>
    </div>
    <div class="field">
      <label class="label">Description</label>
      <div class='control'>
        <%= form.text_area :description, class: "textarea" %>
      </div>
    </div>
    <div class="field">
      <div class='control'>
        <%= form.submit 'Create', class: "button is-link" %>
      </div>
    </div>
  <% end %>
</div>
